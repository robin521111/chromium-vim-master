# rVim Chrome Extension 环境配置文件
# 复制此文件为 .env 并填入实际值
# 注意: .env 文件包含敏感信息，不应提交到版本控制系统

# Chrome Web Store API 配置
# 获取方法: https://developer.chrome.com/docs/webstore/using_webstore_api/
CHROME_EXTENSION_ID=your_extension_id_here
CHROME_CLIENT_ID=your_client_id_here
CHROME_CLIENT_SECRET=your_client_secret_here
CHROME_REFRESH_TOKEN=your_refresh_token_here

# 发布配置
DEFAULT_RELEASE_TYPE=minor
AUTO_PUBLISH=false

# 构建配置
BUILD_ENV=production
MINIFY_CODE=true
SOURCE_MAPS=false

# 通知配置 (可选)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
EMAIL_NOTIFICATION=false

# 测试配置
RUN_TESTS_BEFORE_RELEASE=true
TEST_TIMEOUT=30000

# 备份配置
BACKUP_RELEASES=true
BACKUP_RETENTION_DAYS=90

# 开发配置
DEV_SERVER_PORT=8080
HOT_RELOAD=true
DEBUG_MODE=false